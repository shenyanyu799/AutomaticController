<Page x:Class="AutomaticController.Windows.Demos.测试机通用界面.Pages.参数设置"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="clr-namespace:AutomaticController.UI" 
      xmlns:local="clr-namespace:AutomaticController.Windows.Demos.测试机通用界面.Pages"
            xmlns:ds="clr-namespace:AutomaticController.Windows.Demos.测试机通用界面.Datas" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="参数设置">

    <Grid>
        <TextBlock Text="参数设置" FontSize="35" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,5,0,0"/>
        <TextBlock x:Name="DatetimeText" Text="当前时间" FontSize="35" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0"/>
        <Border Height="1" BorderBrush="#FF969191" Margin="3,50,3,0" BorderThickness="0,1,0,0" VerticalAlignment="Top" />
        <Grid Margin="5,55,5,5">
            <StackPanel Margin="40,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <TextBlock Text="产品启动时间（s）：" FontSize="25" />
                    <ui:UTextBox  DataContext="{Binding Source={x:Static ds:PLC1.产品启动时间}}"  Width="120" FontSize="25" TextAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <TextBlock Text="检测时间（s）：" FontSize="25" />
                    <ui:UTextBox  DataContext="{Binding Source={x:Static ds:PLC1.检测时间}}" Width="120" FontSize="25" TextAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <TextBlock Text="流量上限（ml/min）：" FontSize="25" />
                    <ui:UTextBox  DataContext="{Binding Source={x:Static ds:PLC1.流量上限}}" Width="120" FontSize="25" TextAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <TextBlock Text="流量下限（ml/min）：" FontSize="25" />
                    <ui:UTextBox  DataContext="{Binding Source={x:Static ds:PLC1.流量下限}}" Width="120" FontSize="25" TextAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <TextBlock Text="流量系数：" FontSize="25" />
                    <ui:UTextBox  DataContext="{Binding Source={x:Static ds:PLC1.流量系数}}" Width="120" FontSize="25" TextAlignment="Center"/>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
